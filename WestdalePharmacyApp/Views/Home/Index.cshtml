@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
	ViewData["Title"] = "Home Page";
}
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
		{
	//admin
<div class="card-deck">
	<div class="card"  >
		<a asp-controller="Clients" asp-action="Index">
			<img class="card-img-top" src="~/images/profile.png" alt="Profile">
			<div class="card-body">
				<h5 class="card-title">View All Clients </h5>

			</div>
		</a>
	</div>
	<div class="card">
		<a asp-controller="Prescriptions" asp-action="IndexA">
			<img class="card-img-top" src="~/images/prescription.png" alt="Perscription">
			<div class="card-body">
				<h5 class="card-title">View Prescription Request</h5>

			</div>
		</a>
	</div>
	<div class="card">
		<a  asp-controller="MessagesForAdmin" asp-action="Index">
			<img class="card-img-top" src="~/images/message.png" alt="Message">
			<div class="card-body">
				<h5 class="card-title">View Messages </h5>
	
			</div>
		</a>
	</div>
</div>

}
@if (SignInManager.IsSignedIn(User) && User.IsInRole("Client"))
{
	//Client
<div class="card-deck">
	<div class="card" >
		<a asp-controller="MessagesForUser" asp-action="Index">
			<img class="card-img-top" src="~/images/message.png" alt="Message" >
			<div class="card-body">
				<h5 class="card-title">Send New Message </h5>
			</div>
		</a>
	</div>
	<div class="card" >
		<a asp-controller="Prescriptions" asp-action="Create">
			<img class="card-img-top" src="~/images/medical-prescription.png" alt="Create Prescription" >
			<div class="card-body">
				<h5 class="card-title">Send New Prescription</h5>
			</div>
		</a>
	</div>
	<div class="card"  >
		<a asp-controller="Prescriptions" asp-action="Index">
			<img class="card-img-top" src="~/images/prescription.png" alt="Pescription Index">
			<div class="card-body">
				<h5 class="card-title">Message History </h5>
		
			</div>
		</a>
	</div>
	
	<div class="card">
		<a asp-area="Identity" asp-page="/Account/Manage/Index">
			<img class="card-img-top" src="~/images/profile.png" alt="Profile">
			<div class="card-body">
				<h5 class="card-title">Update Information - no link at the moment</h5>

			</div>
		</a>
</div>
</div>
}

@if (!SignInManager.IsSignedIn(User))
{
	<div class="text-center">
		<h1 class="display-4">Welcome</h1>
		<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
				<li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
				<li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="~/images/stethoscope.jpg" class="d-block w-100" alt="stesthoscope">
					<div class="carousel-caption d-none d-md-block">
						<h5>Find it!</h5>
						<p>Find the best bike rack in the city.</p>
					</div>
				</div>
				<div class="carousel-item">
					<img src="~/images/vaccine.png" class="d-block w-100" alt="Vaccine">
					<div class="carousel-caption d-none d-md-block">
						<h5>Read the reviews before you park</h5>
						<p>Park your bike at the safest stop</p>
					</div>
				</div>
				<div class="carousel-item">
					<img src="~/images/mobileImage.jpg" class="d-block w-100" alt="Mobile Image">
					<div class="carousel-caption d-none d-md-block">
						<h5>Route</h5>
						<p>Find the route to your favorite parking spot</p>
					</div>
				</div>
				<div class="carousel-item">
					<img src="~/images/pills.png" class="d-block w-100" alt="Pills">
					<div class="carousel-caption d-none d-md-block">
						<h5>Check out the features </h5>
						<p>Check out the features before going to the parking spot</p>
					</div>
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
}
